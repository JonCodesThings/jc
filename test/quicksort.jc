import io;

void sort(mut i32 mut *items, mut i32 size) 
{
    void quickSort(i32 first, i32 last) 
	{
	    void swap(i32 p, i32 q)
		{
            i32 tmp = items[p];
			i32 tmp2 = items[q];
			items[p] = tmp2;
			items[q] = tmp;
        }
		        
        i32 partition() 
		{
            i32 pivot = items[first];
			mut i32 index = first;
            swap(index, last);

			for (mut i32 i = first; i < last; i++)
			{
				i32 items_at_i = items[i];
			    if (items_at_i < pivot)
				{
					swap(index, i);
					index++;
				}
			}

            swap(index, last);

            return index;
        }

		if (first < last) 
		{
            i32 pivotIndex = partition();
            quickSort(first, pivotIndex - 1);
            quickSort(pivotIndex + 1, last);
        }
    }
    quickSort(0, size - 1);
}

main()
{
	i32 mut arr mut[5] = { 25, 4, 5, 7, 1 };

	printf("Original array values: \n");
	for (mut i32 l = 0; l < 5; l++)
	{
		i32 k = arr[l];
		printf("%d\n", k);
	}
	printf("\n");

	printf("Sorting array using quicksort...\n\n");
	sort(arr, 5);

	printf("Sorted array values: \n");
	for (mut i32 i = 0; i < 5; i++)
	{
		i32 n = arr[i];
		printf("%d\n", n);
	}
	printf("\n");

	return 0;
}