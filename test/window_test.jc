i32 main()
{
	window_descriptor wnd_desc;
	wnd_desc.title = "hello jc";
	wnd_desc.width = 640;
	wnd_desc.height = 480;
	wnd_desc.style = window_style::WINDOW_BORDERED;

	window *wnd = create_window(&wnd_desc);

	cont := process_os_events(wnd);

	while (cont == (i8)true)
	{
		cont = process_os_events(wnd);
	}

	destroy_window(wnd);

	return 0;
}